{
  "name": "push2meet",
  "productName": "Push2Meet",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "howler": "^2.1.3",
    "iohook": "^0.6.5"
  },
  "iohook": {
    "targets": [
      "node-59",
      "electron-76"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "build": {
    "appId": "app.push2meet",
    "productName": "Push2Meet",
    "mac": {
      "icon": "./buildResources/meeticon.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./buildResources/meeticon.png"
    },
    "files": [
      "./src/**/*",
      "./buildResources/**/*",
      "./node_modules/**/*",
      "*.js"
    ],
    "directories": {
      "buildResources": "buildResources"
    }
  }
}
